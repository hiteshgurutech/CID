<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/footerMenu"
                android:background="@color/white"
                android:fillViewport="true"
                tools:context="com.example.cidapp.Register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/change_tvEmailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your email address:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/change_layEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/change_etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_enter_new_email"
                    android:inputType="textEmailAddress"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/change_btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?colorPrimary"
                android:text="@string/label_update"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>